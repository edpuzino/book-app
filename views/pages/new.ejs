<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
  <%- include('../partials/header') %>
    <div id='page-label'>
      <h2 class='label'>Add A New Book</h2>
    </div>
    <form id='form' action='/add' method='post'>
        <input type="text" id="text" name='title' placeholder='Title' required pattern='[A-Z][A-Za-z' -]+'>
        <input type="text" id="text" name='author' placeholder="Author" required pattern='[A-Z][A-Za-z' -]+'>
        <input type="text" id="text" name='isbn' placeholder="ISBN" required pattern='[0-9]' min='10' max='15'>
        <input type="text" id="text" name='image_url' placeholder="Image URL">
        <textarea  id="text" name='description' placeholder="Description" cols="30" rows="5"></textarea>
        <button class='list' type='submit' id='button'> Submit</button>
    </form>
    <%- include('../partials/footer') %>
  </body>
</html>

