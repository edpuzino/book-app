<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
  <%- include('../partials/header') %>
    <div id='page-label'>
      <h2 class='label'>Search Results</h2>
    </div>
    <% results.forEach(book => { %>
      <div data-book-id="<%= book.isbn %>">
        <section class ='books'>
          <ul class ='book'>
            <li class='items'>
            <img id = 'book_img' src= "<%= book.image_url %>"/></li>
            <li class='items' id='title'>Title: <% if (book.subtitle) { %>
            <h3><%= book.title %>: <%= book.subtitle %></h3>
          <% } else { %>
            <h3><%= book.title %></h3>
          <% } %></li>
            <li class ='items' id='author'>Author: <%= book.author%></li>
            <li class='items' id='description'><%= book.description%></li>
          </ul>        
          <form id="hide-me" action="/new" method="post">
            <input type="text" name="title" value="<%= book.title %>">
            <input type="text" name="author" value="<%= book.author %>">
            <input type="text" name="isbn" value="<%= book.isbn %>">
            <input type="text" name="image_url" value="<%= book.image_url %>">
            <input type='text' name='description' value="<%= book.description%>">
            <button class='list' id="button" type="submit">Add to Database</button>
          </form>
        </section>
      </div>
    <% }); %>    
    <%- include('../partials/footer') %>
  </body>
</html>